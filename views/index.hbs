<div class="p-2 rounded mt-3 ms-5 me-5">
    <h2>Pacientes</h2>
    {{#if table}}
    <table class="table table-striped mt-3">
        <thead>
            <tr>
            <th scope="col">Protuário</th>
            <th scope="col">Nome</th>
            <th scope="col">CPF</th>
            <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            {{#each pacientes}}
            <tr>
                <th scope="row">{{prontuario}}</th>
                <td>{{nome}}</td>
                <td>{{cpf}}</td>
                <td>
                    <div class="row">
                        <div class="col-6 col-md-3">
                            <button class="btn btn-info w-100">Editar</button>
                        </div>
                        <div class="col-6 col-md-3">
                            <button class="btn btn-danger w-100">Deletar</button> 
                    </div>
                </td>
            </tr>
            {{/each}}
            
        </tbody>
    </table>
    {{else}}
    <div class="card mt-4">
        <div class="card-body">
          Nenhum dado encontrado!
        </div>
      </div>
    {{/if}}

</div>