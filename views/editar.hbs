<div class="container">
    <h4 class="text-center mb-4">INFORMAÇÕES DO PACIENTE</h4>
    <form method="post" action="/update">
        <div class="row g-3 mb-3">
            <div class="col-sm-6">
                <label for="Nome" class="form-label fw-bold">Nome</label>
                <input type="hidden" value="" name="id">
                <input  value="" type="text" class="form-control" id="nome" name="nome" placeholder="Digite seu Nome" required>
            </div>
            <div class="col-sm-6">
                <label for="exampleFormControlInput1" class="form-label fw-bold">Nome da Mãe</label>
                <input value="" type="text" class="form-control" id="nomeMae" name="nomeMae" placeholder="Digite o nome da Mãe" required>
            </div>
        </div>
        <div class="row g-3 mb-3">
            <div class="col-sm-6">
                <label for="cpf" class="form-label fw-bold">CPF</label>
                <input type="hidden" value="" name="cpf">
                <input  value="" type="text" class="form-control" id="cpf" name="cpf" placeholder="Digite seu CPF" required>
            </div>
            <div class="col-sm-6">
                <label for="exampleFormControlInput1" class="form-label fw-bold">Data de Nascimento</label>
                <input value="" type="date" class="form-control" id="dataNasc" name="dataNasc" required>
            </div>
        </div>
        <div class="row g-3 mb-3">
            <div class="col-sm-6">
                <label for="idadeGest" class="form-label fw-bold">Idade Gestacional</label>
                <input type="hidden" value="" name="idadeGest">
                <input  value="" type="text" class="form-control" id="idadeGest" name="idadeGest" placeholder="Digite a idade gestacional" required>
            </div>
            <div class="col-sm-6">
                <label for="sexo" class="form-label fw-bold">Sexo</label>
                <select class="form-select" aria-label="Default select example">
                <option value="F" selected>Feminino</option>
                <option value="M">Masculino</option>              
                </select>
            </div>
        </div>
        <div class="row g-3 mb-3">
            <div class="col-sm-6">
                <label for="exampleFormControlInput1" class="form-label fw-bold">Email</label>
                <input value="" type="email" class="form-control" id="email" name="email" placeholder="Digite seu Email" required>
            </div>
            <div class="col-sm-6">
                <label for="celular" class="form-label fw-bold">Celular</label>
                <input type="hidden" value="" name="id">
                <input  value="" type="telefone" class="form-control" id="telefone" name="telefone" placeholder="Digite seu número de telefone" required>
            </div>  
        </div>
        <div class="row">
            <label for="obs" class="form-label fw-bold">Observações</label>
            <input type="hidden" value="" name="obs">
            <input  value="" type="text" class="form-control" id="nome" name="obs" placeholder="Digite as Observações">
        </div>
        
        <hr class="my-4">

        <button class="w-30 btn btn-primary btn-lg" type="submit">SALVAR</button>
    </form>
    

        
</div>
